# no welcome message
startup_message off

# tab-completion flash in heading bar
vbell off

# Handle vim text at top
altscreen on

# Automatically detach on hangup.
autodetach on

hardstatus alwayslastline
hardstatus string '%{= kG}[%{G}%H%? %1`%?%{g}][%{B}%m/%d %{W}%C%A%{g}][%= %{= kw}%-w%{+b yk} %n*%t%?(%u)%? %{-}%+w %=%{g}']
#hardstatus string "%{= R}[ %{=b b}%-w%{=rb db}%>%n %t%{-}%+w%{-b}%< %=%{R}][%{B}%m/%d %{W}%C%A%{g}]"
